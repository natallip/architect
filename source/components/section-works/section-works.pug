mixin section-works
	
	section.section.section-works#section-works(data-section-name="works")
		.container
			.works
				each item in data.works
					a.works__item.elem(href="/images/" + item, title="Название работы", data-lcl-thumb="/images/thumbs/" + item)
						span(style=`background-image: url(/images/thumbs/${item});`)
  
